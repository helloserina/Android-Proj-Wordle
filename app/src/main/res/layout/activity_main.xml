<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/input_1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:hint="Guess 1"
        android:singleLine="true"
        android:maxLines="1"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:lines="1"
        android:maxLength="4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/result_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guess 1 check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_1" />

    <EditText
        android:id="@+id/input_2"
        android:hint="Guess 2"
        android:enabled="false"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/result_1"
        android:maxLines="1"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:lines="1"
        android:maxLength="4"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/result_2"
        android:text="Guess 2 check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_2" />

    <EditText
        android:id="@+id/input_3"
        android:hint="Guess 3"
        android:enabled = "false"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/result_2"
        android:maxLines="1"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:lines="1"
        android:maxLength="4"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/result_3"
        android:text="Guess 3 check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_3" />

</androidx.constraintlayout.widget.ConstraintLayout>